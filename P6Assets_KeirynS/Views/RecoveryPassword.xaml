<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="P6Assets_KeirynS.Views.RecoveryPassword"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False"
             BackgroundImageSource="rcwp">

    <VerticalStackLayout Padding="20,0,20,0" VerticalOptions="CenterAndExpand">

        <Image x:Name="padlock" Source="padlockicon" HeightRequest="150" />

        <Entry x:Name="TxtUserName" Margin="0,30,0,10" Placeholder="Username/Email" Keyboard="Email" FontSize="25"/>
        <Entry x:Name="TxtEmail" Placeholder="Email..." FontSize="20" Keyboard="Email" />

        <Button x:Name="BtnRecovery" Text="𝗥𝗘𝗖𝗢𝗩𝗘𝗥𝗬 𝗣𝗔𝗦𝗦𝗪𝗢𝗥𝗗" BackgroundColor="Green" Margin="0,30,0,0" Clicked="BtnRecovery_Clicked" />

    </VerticalStackLayout>
</ContentPage>
